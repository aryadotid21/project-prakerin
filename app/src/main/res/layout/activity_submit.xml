<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:paddingTop="20dp"
    tools:context=".SubmitActivity">

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Spinner
            android:id="@+id/spinner_gardu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/gardu"
            android:paddingTop="25dp"
            android:background="@null"/>
        <Spinner
            android:id="@+id/spinner_tower"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/tower"
            android:paddingTop="15dp"
            android:background="@null"/>
        <Spinner
            android:id="@+id/spinner_aksesoris"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/aksesoris"
            android:paddingTop="15dp"
            android:background="@null"/>
        <Spinner
            android:id="@+id/spinner_anomaly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/anomaly"
            android:paddingTop="15dp"
            android:background="@null"/>

        <EditText
            android:id="@+id/keterangan"
            android:hint="Keterangan"
            android:inputType="text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            android:paddingTop="15dp"/>

        <ProgressBar
            android:id="@+id/loading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:paddingBottom="20dp">
        </ProgressBar>


        <ImageView
            android:id="@+id/imageUpload"
            android:layout_width="match_parent"
            android:layout_height="225dp"
            android:src="@drawable/cam"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"/>

        <Button
            android:id="@+id/btn_choose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:text="Choose Image"
            android:textSize="14sp"/>
        <Button
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:text="Submit"
            android:textSize="14sp"/>
    </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>